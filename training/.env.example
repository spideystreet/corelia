# ═══════════════════════════════════════════════════════════════════════════════
# HUGGING FACE HUB CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════
HF_TOKEN=your_huggingface_token_here
HF_CACHE_DIR=./cache

# ═══════════════════════════════════════════════════════════════════════════════
# MLFLOW EXPERIMENT TRACKING
# ═══════════════════════════════════════════════════════════════════════════════
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_EXPERIMENT_NAME=mistral-7b-french-medical

# ═══════════════════════════════════════════════════════════════════════════════
# MODEL CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════
MODEL_CACHE_DIR=./models
MAX_LENGTH=2048
BATCH_SIZE=1
GRADIENT_ACCUMULATION_STEPS=8

# ═══════════════════════════════════════════════════════════════════════════════
# TRAINING HYPERPARAMETERS
# ═══════════════════════════════════════════════════════════════════════════════
LEARNING_RATE=2e-4
NUM_EPOCHS=3
WARMUP_STEPS=100
LOGGING_STEPS=10
SAVE_STEPS=500

# ═══════════════════════════════════════════════════════════════════════════════
# DEVICE CONFIGURATION (MacBook M3 Optimized)
# ═══════════════════════════════════════════════════════════════════════════════
DEVICE_MAP=auto
TORCH_DTYPE=float16
FP16=true

# ═══════════════════════════════════════════════════════════════════════════════
# DATASET CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════
DATASET_CACHE_DIR=./datasets
MAX_SAMPLES=1000  # For testing, set to None for full dataset

# Mistral-7B Training Datasets (format: "name":weight)
DATASETS_MISTRAL="chapin/NACHOS_large":0.5,"Abirate/mediqal":0.25,"alicelacaille/FRASIMED":0.15

# Evaluation Metrics (comma-separated)
EVALUATION_METRICS=rouge,bertscore,bleu,perplexity

# ═══════════════════════════════════════════════════════════════════════════════
# ADVANCED CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════
# Uncomment and modify as needed:
# WANDB_PROJECT=corelia-mistral-7b
# WANDB_ENTITY=your_entity
# CUDA_VISIBLE_DEVICES=0
# TOKENIZERS_PARALLELISM=false
